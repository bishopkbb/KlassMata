# .env.example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ==============================================================================
# App Configuration
# ==============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================================================
# Database Configuration
# ==============================================================================
# MongoDB Atlas (Production)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/klassmata?retryWrites=true&w=majority

# Local MongoDB (Development) - uncomment to use
# DATABASE_URL=mongodb://admin:password123@localhost:27017/klassmata?authSource=admin

# ==============================================================================
# Authentication Configuration
# ==============================================================================
NEXTAUTH_URL=http://localhost:3000
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=generate-secret-with-openssl-rand-base64-32
JWT_SECRET=generate-secret-with-openssl-rand-base64-32

# ==============================================================================
# Email Configuration (Resend)
# ==============================================================================
RESEND_API_KEY=re_your_resend_api_key_here

# ==============================================================================
# Payment Providers (Optional)
# ==============================================================================
# Flutterwave
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your-public-key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-secret-key
FLUTTERWAVE_ENCRYPTION_KEY=your-encryption-key

# Paga
PAGA_PUBLIC_KEY=your-paga-public-key
PAGA_SECRET_KEY=your-paga-secret-key
PAGA_ENVIRONMENT=sandbox

# ==============================================================================
# SMTP Email (Alternative to Resend - Optional)
# ==============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_FROM=noreply@klassmata.com

# ==============================================================================
# File Upload (Optional)
# ==============================================================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==============================================================================
# Redis Cache (Optional)
# ==============================================================================
REDIS_URL=redis://localhost:6379

# ==============================================================================
# Security
# ==============================================================================
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=generate-32-char-hex-string
BCRYPT_SALT_ROUNDS=12
WEBHOOK_SECRET=your-webhook-secret-for-payment-verification

# ==============================================================================
# Feature Flags
# ==============================================================================
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false
ENABLE_PAYMENTS=false

# ==============================================================================
# API Configuration
# ==============================================================================
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=3600

# ==============================================================================
# Logging
# ==============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ==============================================================================
# Social Authentication (Optional)
# ==============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==============================================================================
# Development
# ==============================================================================
NEXT_PUBLIC_DEV_MODE=true
PRISMA_CLI_QUERY_ENGINE_TYPE=binary